@model IEnumerable<HelmetStockManager.ViewModel.ClientSaleViewModel>

@{
    ViewData["Title"] = "Client Sale Report";
}

<h1>Client Sale Report</h1>

<form class="form-inline float-right" style="margin-bottom: 15px;">
    @using (Html.BeginForm("ClientSaleReport", "Report", FormMethod.Get))
    {
        <input class="form-control mr-sm-2" name="search" id="search" type="search" placeholder="Search" aria-label="Search">
        <button class="btn btn-outline-secondary my-2 my-sm-0" type="submit">Search</button>
        <br />
    }
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ClientName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateOfSale)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SaleQuantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UnitPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TotalAmount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HelmetName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ClientName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateOfSale)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SaleQuantity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UnitPrice)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TotalAmount)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HelmetName)
                </td>
            </tr>
        }
    </tbody>
</table>
